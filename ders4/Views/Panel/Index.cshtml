@model List<ders4.Models.Product>
@{
    ViewBag.Title = "Admin Sayfası";
}

<div class="panel panel-default">
    <div class="panel-heading">Ürünler Sayfası</div>
    <div class="panel-body">
        @if (ViewBag.ShowMessage == true)
        {
            <div class="alert alert-success" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Mesaj:</span>
                Hoş geldiniz. <em>Bu mesaj, cookie sayesinde bir defa gösterilir</em>
            </div>
        }

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>No</th>
                    <th>İsim</th>
                    <th>Detay</th>
                    <th>Fiyat</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.name</td>
                        <td>@item.detail</td>
                        <td>@item.price TL</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>
